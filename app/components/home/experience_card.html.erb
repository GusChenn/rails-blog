<article class='rounded border border-stone-700 flex flex-col sm:flex-row justify-between'>
  <div class='flex flex-col w-full sm:w-2/3 p-4 gap-2 justify-center'>
    <div class='experience-grid'>
      <%= icon(icon_family, icon_name, class: "text-#{icon_color} text-xl w-fit") %>
      <h2 class='title-text font-bold text-lg'>
        <%= title %>
      </h2>
      <h4 class='font-italica col-start-2 row-start-2'>
        <%= duration %>
      </h4>
    </div>
  </div>
  <% if tags_data.present? %>
    <div class='text-sm w-full sm:w-1/3 p-4 pt-0 sm:pt-4 sm:pl-0 leading-6 sm:text-pretty text-center sm:text-right'>
      <% tags_data.each do |tag_data| %>
        <div class='inline-block'>
          <%= render(UserInterface::IconTag.new(tag_data)) %>
        </div>
      <% end %>
    </div>
  <% end %>
</article>
