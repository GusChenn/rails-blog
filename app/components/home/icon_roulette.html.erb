<div class='w-10 h-10 overflow-y-hidden' data-controller='animations'>
  <div class='flex flex-col w-fit items-center vertical-roulette' data-animations-target='roulette'>
    <% icons_data.each do |icon, color| %>
      <div class='w-10 h-10 text-center flex items-center justify-center wind-up-transition' data-animations-target='icon'>
        <%= icon(
          'fa-solid',
          icon,
          class: "w-fit text-3xl text-#{color}"
        )%>
      </div>
    <% end %>
  </div>
</div>
